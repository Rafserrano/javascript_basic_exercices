/*
contar palablras de un string
*/

function wordCount (str) {
    let texto = str.split(' ');
    let palabras = 0;
    for (let i = 0; i < texto.length; i += 1) {
        palabras += 1;
    }
    return palabras;
}

const contarpalabras = wordCount("este estring estÃ¡ de muerte");
console.log(contarpalabras);
